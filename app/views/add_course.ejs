<%- include('header'); -%>
<div class="container">
  <div class="container_add">
    <form action="/courses" method="post">
      <div>
        <label>Course ID:</label>
        <select name="courseId">
          <option value="COMP100">COMP100- C#</option>
          <option value="COMP231" selected>COMP231- Software project 1</option>
          <option value="COMP255">COMP255 - something new</option>
          <option value="COMP246">COMP246 - Software project 2</option>
        </select>
      </div>
      <div>
        <label>Module: </label><br />
        <input type="radio" name="module" value="module1" checked />  
        <label>module1</label><br />
        <input type="radio" name="module" value="module2" />  
        <label>module2</label><br />
        <input type="radio" name="module" value="module3" />  
        <label>module3</label><br />
         
      </div>
      <div>
        <label>Course Name:</label>
        <input type="text" name="courseName" />
      </div>
      <div>
        <label>Course Description:</label>
        <input type="text" name="courseDescription" />
      </div>
      <div>
        <label>Start Date:</label>
        <input type="date" name="startDate" placeholder="yyyy/mm/dd" />
      </div>
      <div>
        <label>End Date:</label>
        <input type="date" name="endDate" placeholder="yyyy/mm/dd" />
      </div>
      <div>
        <label>Owner:</label>
        <input
          type="email"
          name="owner"
          pattern=".+@tdsb\.com"
          title="Please provide only a Best Startup Ever corporate e-mail address"
        />
      </div>
      <div>
        <input
          class=""
          type="reset"
          value="Reset"
          onClick="this.form.reset()"
        />
        <input class="" type="submit" value="Create Course" />
      </div>
    </form>
  </div>
</div>
<%- include('footer'); -%>
