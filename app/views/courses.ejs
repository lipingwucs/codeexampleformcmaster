<%- include('header'); -%>
<div class="container">
  <form method="post" action="/edit_course">
    <table align="center" class="table table-striped table-hover">
      <tr>
        <td>
          <div>
            <label>Course ID:</label>
          </div>
        </td>
        <td>
          <div>
            <label>Course Name:</label>
          </div>
        </td>
        <td>
          <div>
            <label>Module:</label>
          </div>
        </td>
        <td>
          <div>
            <label>Course Description:</label>
          </div>
        </td>

        <td>
          <div>
            <label>Start Date:</label>
          </div>
        </td>
        <td>
          <div>
            <label>End date </label>
          </div>
        </td>

        <td>
          <div>
            <label>Instructor </label>
          </div>
        </td>
        <td>
          <div>
            <label> </label>
          </div>
        </td>
        <td>
          <div>
            <label> </label>
          </div>
        </td>
        <td>
          <div>
            <label> </label>
          </div>
        </td>
      </tr>

      <% courses.forEach(function(course){ %>

      <tr>
        <td>
          <div>
            <input type="text" name="courseId" value="<%= course.courseId %>" />
          </div>
        </td>
        <td>
          <div>
            <input
              type="text"
              name="courseName"
              value="<%= course.courseName %>"
            />
          </div>
        </td>
        <td>
          <div>
            <input type="text" name="module" value="<%= course.module %>" />
          </div>
        </td>
        <td>
          <div>
            <input
              type="text"
              name="courseDescription"
              value="<%= course.courseDescription %>"
            />
          </div>
        </td>

        <td>
          <div>
            <input
              type="date"
              name="startDate"
              value="<%= course.startDate %>"
              placeholder="yyyy/mm/dd"
            />
          </div>
        </td>
        <td>
          <div>
            <input
              type="date"
              name="endDate"
              value="<%= course.endDate %>"
              placeholder="yyyy/mm/dd"
            />
          </div>
        </td>

        <td>
          <div>
            <input
              type="email"
              name="owner"
              value="<%= course.owner %>"
              pattern=".+@tdsb\.com"
              title="Please provide only a Best Startup Ever corporate e-mail address"
            />
          </div>
        </td>
        <td>
          <div>
            <input
              type="submit"
              formaction="/list_courses/<%= course.courseId %>?_method=PUT"
              value="Update"
              class="btn btn-warning"
            />
          </div>
        </td>
        <td>
          <div>
            <input
              type="submit"
              formaction="/list_courses/<%= course.courseId %>?_method=Delete"
              value="Delete"
              class="btn btn-danger"
            />
          </div>
        </td>
        <td>
          <div>
            <input
              type="submit"
              formaction="/courses_details?id=<%= course.courseId %>"
              value="Details"
              class="btn btn-information"
            />
          </div>
        </td>
      </tr>

      <% })%>
    </table>
  </form>
</div>
<%- include('footer'); -%>
